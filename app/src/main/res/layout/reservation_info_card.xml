<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="340dp"
        app:cardCornerRadius="17dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/vehicle_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/teal_700"
            android:orientation="vertical"
            android:padding="4dp"
           >

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="168dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/reservation" />

                <LinearLayout
                    android:layout_width="226dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/veh"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableLeft="@drawable/ic_baseline_directions_car_24"
                        android:drawablePadding="7dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/veh_size"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableLeft="@drawable/ic_baseline_directions_car_24"
                        android:drawablePadding="7dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_baseline_person2"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/From"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_baseline_location_city2"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/To"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_baseline_location_city2"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="55dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/From_Add"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_baseline_add_home_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/To_Add"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_baseline_add_home_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/Date"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_baseline_access_time2"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/Time"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_baseline_calendar_month2"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/contact1"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_baseline_contact_phone2"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/contact2"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_baseline_contact_phone2"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>